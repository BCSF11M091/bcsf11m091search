@model List<TP2.Models.CartItem>

@{
    ViewBag.Title = "CheckOut";
}



 <section id="cart_items">

		<div class="container">
			
			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="price">Item</td>
							<td class="description"></td>
							<td class="price">Price</td>
							<td class="quantity">Quantity</td>
							<td class="total">Total</td>
							<td></td>
						</tr>
					</thead>
                    @{int  total = 0,count = 0;}
                    @{total = 0;}
					<tbody>
                        @foreach(var ss in Model )
                        {
						 <tr>
							
							<td class="cart_description">
								<h4><a href="#">New Added Item</a></h4>
								<p>@ss.Path</p>
							</td>
                             <td class="description"></td>
							<td class="cart_price">
								<p>$@ss.Price</p>
							</td>
							<td class="cart_quantity">
								<div class="cart_quantity_button">
									<p class="cart_quantity_up" > #1 </p>
								</div>
							</td>
							<td class="cart_total">
								<p class="cart_total_price">$@ss.Price</p>
							</td>
							
                             @{total = total +Int32.Parse( ss.Price+"");
                               count += 1;
                                   }
						</tr>
                           

                        }

                         <tr>
                             <td class="cart_description">
								<h4><a href="#">Grand Total Is:</a></h4>
								<p></p>
							</td>
                             <td class="description"></td>
                             <td class="cart_total">
								<p class="cart_total_price"></p>
							</td>
							<td class="price">@count</td>
							<td class="quantity">@total</td>
                            </tr>

                    </tbody>
                 </table>

                <div class="row">
                        <div class="col-md-3">
                          <form method="post" action= "/Account/Signup")>
                               <button class="btn btn-long" >SignUp</button>
                            </form>
                            </div>
                        <div class="col-md-3">
                        <form method="post" action= "/Account/Login")>
                                <button class="btn btn-long" >Login</button>
                            </form>
                        </div>
                        <div class="col-md-3">
                    <form method="post" action="/Catagery/procedout">
                    <button class="btn btn-long" >Proceed</button>
                        </form>
                    </div>
                </div>


               
             </div>
        </div>

</section>